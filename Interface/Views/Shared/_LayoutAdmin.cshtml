                    closeOnClick: true
                },
                yes: {
                    'class': 'lobibox-btn lobibox-btn-yes',
                    text: 'Yes',
                    closeOnClick: true
                },
                no: {
                    'class': 'lobibox-btn lobibox-btn-cancel',
                    text: 'No',
                    closeOnClick: true
                }
            }
        });
        });

        var waitingDialog = waitingDialog || (function ($) {

            return {

                show: function (message, options) {
                    $('body').loading({
                        theme: 'dark',
                        message: 'Loading....'
                    });
                },
                /**
                 * Closes dialog
                 */
                hide: function () {
                    $('body').loading('stop');
                }
            };

        })(jQuery);
