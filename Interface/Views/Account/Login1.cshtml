@model Interface.Models.Login
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="container" style="min-height:540px;">
    <div class="row">
        <div class="col-md-5 m-x-auto pull-xs-none vamiddle" style="margin-top: 29.1583px;">
            <div class="card">
                <div class="card-block p-a-2">
                    <!--Logo-->
                    @*<div class="col-md-12 text-center" style="margin-top:-10px;">
                            <img src="@ViewBag.Logo" style="width:120px;height:100px;" />
                        </div>*@
                    <div class="card-block">
                        <div class="text-center">
                            <h5>Login</h5>
                        </div>
                        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { enctype = "multipart/form-data", @class = " sky-form boxed", role = "form" }))
                        {
                            @Html.AntiForgeryToken()

                            if (TempData["Message"] != null)
                            {
                                @Html.Raw(Html.ShowAlertWithimage(TempData["Message"].ToString(), TempData["Type"].ToString()))
                                <div style="height:20px;"></div>
                            }
                            @*<p class="text-muted">نام کاربری و رمز عبور خور را وارد کنید:</p>*@

                            <div class="form-group">
                                <div class="input-group m-b-0">
                                    <span class="input-group-addon">
                                        <i class="icon-user"></i>
                                    </span>
                                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control ", @placeholder = "Email or Phone Number" })
                                </div>
                                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "control-label vali-error" })
                            </div>

                            <div class="form-group">
                                <div class="input-group m-t-1">
                                    <span class="input-group-addon">
                                        <i class="icon-lock"></i>
                                    </span>
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                                </div>
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "control-label vali-error" })
                            </div>

                          
                                @Html.Hidden("Captcha", "0")
                            



                            <div class="form-group">
                                <div class="col-sm-12">
                                    <div class="checkbox">
                                        <label id="remember">
                                            @Html.CheckBoxFor(m => m.RememberMe, new { @class = "checkbox", @name = "checkbox-inline" })
                                            Remember Me
                                        </label>

                                    </div>
                                </div>
                            </div>



                                <div class="row ">
                                    <div class="col-xs-6 ">
                                        <button type="submit" class="btn btn-primary p-x-2">
                                            <i class="icon-login"></i>
                                       Login
                                        </button>
                                    </div>
                                
                                    <div class="col-xs-6 ">
                                        <a href='@Url.Action("ForgotPassword", "Account")' class="btn btn-link p-x-0">Forgot Password</a>
                                    </div>
                             
                                    @*<div class="col-xs-6 ">
                                        <a href='@Url.Action("Register", "Account")' class="btn btn-link p-x-0">ثبت نام مشتریان</a>
                                    </div>*@
                                </div>


                        }

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>


<script type="text/javascript" src="~/Content/themes/AccountingAdmin//assets/plugins/jquery/jquery-2.1.4.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>


