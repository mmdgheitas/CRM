@model string
@{
    ViewBag.Title = "Access Denied";
    Layout = "~/Views/Shared/_LayoutAccessDeny.cshtml";
}
<style>
    .e404_2 {
       font-size:50px !important;
       padding-bottom:30px;
        color: #d9534f;

    font-size: 80px;
    font-weight: 700;
    line-height: 80px;
    margin-right: 30px;
    margin-top: -10px;
    }
    .lead{
         padding-bottom:30px;
               font-size:x-large !important;

    }
</style>

<div class="padding-15">

    <div class="">


        <div class="padding-20" id="content">
            <div class="panel panel-default">
                <div class="panel-body text-center">
                    <div class="row ">
                        <p class="lead col-sm-12 ">

                            <span class="e404_2 text-center">Access Denied</span>
                        </p>
                        </div>
                    <p class="lead">

                        You don't have permission to access on this page<br />
                        please contact your system administrator

                    </p>
                    <div class="col-sm-4" style="float:right;">
                        <a class="btn btn-info btn-featured"  href='@Url.Action("Login","Account",new {returnUrl ="logoff" })'>
                            <i class="glyphicon glyphicon-log-in"></i>
                            <span style="font-size:x-large !important;">Login page </span>
                        </a>
                    </div>
                 
                    <div class="col-sm-4" style="float:left;" >
                        <a class="btn btn-info btn-featured" href="@(Model == null || Model == "" ?  Url.Action("Login","Account",new {returnUrl ="logoff" }):Model)">
                            <span style="font-size:x-large !important;">Back</span>
                            <i class="glyphicon glyphicon-circle-arrow-left"></i>
                        </a>
                    </div>
                    
                </div>
            </div>
        </div>
</div>
</div>