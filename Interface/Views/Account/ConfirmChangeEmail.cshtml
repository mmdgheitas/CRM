@model bool
@{
    ViewBag.Title = "تاییدیه تغییر ایمیل";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}



<div class="container" style="min-height:550px;">
    <div class="row">
        <div class="col-md-5 m-x-auto pull-xs-none vamiddle" style="margin-top: 29.1583px;">
            <div class="card">
                <div class="card-block p-a-2">


                    <div class="card-block">
                        <div class="text-center">
                            <h5>تاییدیه تغییر ایمیل</h5>
                        </div>

                        @if (Model)
                        {
                            <div>
                                <span>
                                    ایمیل شما با موفقیت تغییر کرد.<br />
                                    هم اکنون میتوانید با ایمیل جدید  <a href='@Url.Action("Login","Account",new {returnUrl ="logoff" })'>وارد </a>شوید.
                                    <br />
                                    ایمیل جدید : @ViewBag.Email
                                </span>
                            </div>
                        }
                        else
                        {
                            <div>
                                <span>
                                    خطا در تاییدیه ایمیل جدید!<br />
                                    هم چنان میتوانید با ایمیل قبلی خود <a href='@Url.Action("Login","Account",new {returnUrl ="logoff" })'>وارد </a>شوید.
                                     <br />
                                    ایمیل قبلی : @ViewBag.Email
                                  </span>
                            </div>
                        }



                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

