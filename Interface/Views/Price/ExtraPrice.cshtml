<div class="modal fade" tabindex="-1" role="dialog" id="myModal" data-backdrop="static">
    <div class="modal-dialog " id="modalBody">
    </div>
</div>




<script>
    $(document).ready(function () {
        loadGrid();
        SearchFunction("Price", "_ExtraPriceList");
    });

    function loadGrid() {
        $("#jqgrid").jqGrid({
            url: '/Price/_ExtraPriceList',
            mtype: "GET",
            width: "auto",
            shrinkToFit: false,
            styleUI: 'Bootstrap',
            datatype: "json",
            colModel: [
                { label: 'ID', name: 'ID', key: true, editable: false, hidden: true, width: 50, resizable: true },
                { label: 'Title', name: 'Title', editable: true, width: 150, editrules: { required: true }, resizable: true },
                { label: 'Price', name: 'Price', editable: true, width: 100, editrules: { required: true }, resizable: true },
                { label: 'Modified Info', name: 'modifiedInfo', search: false, width: jqGridLastWidth(250) },

            ],
            viewrecords: true,
            direction: "ltr",
            loadonce: true,
            sortable: true,
            //  multiselect: true,
            multiboxonly: true,
            height: (parseInt($(window).height()) - 360),
            rowNum: 10,
            //    scrollOffset: 0,
            rowList: [10, 25, 50, 100000000],
            pager: "#jqGridPager",
            closeAfterAdd: true,
            closeAfterEdit: true,
            ondblClickRow: EditDialog,
            navOptions: { reloadGridOptions: { fromServer: true } },
            loadComplete: function () {
                $("option[value=100000000]").text('View All');
                jqGridloadComplete($(this));

            },
        });

        //jQuery("#jqgrid").jqGrid('filterToolbar', { stringResult: true, searchOnEnter: false, defaultSearch: "cn" });



        styleJqGrid();
        $("#jqGridPager").width(900);
    };
    function ContextMenu(e, EmailConfirmed, Active) {
        e.preventDefault();
        $.contextMenu({
            selector: '.pointer',
            trigger: 'left',
            zIndex: 10000,
            items: {
                "Add": { name: "Add", icon: "add", className: 'icon-color-success', callback: function (key, options) { AddDialog(); } },
                "Edit": { name: "Edit", icon: "edit", className: 'icon-color-warning', callback: function (key, options) { EditDialog(); } },
                "Delete": { name: "Delete", icon: "delete", className: 'icon-color-danger', callback: function (key, options) { DeleteRow(); } },
                "Refresh": { name: "Refresh", icon: "fa-refresh", className: 'icon-color-primary', callback: function (key, options) { reloadGrid(); } },
                "sep1": "---------",
                //btn btn-sm btn-blue
            },
            events: {
                hide: function (opt) {
                    $(".pointer").contextMenu('destroy');
                }
            },

        });
    }

    function EditDialog() {

        showEditDialog('Price', '_ExtraPrice');
    };

    function AddDialog() {
        showAddDialog('Price', '_ExtraPrice');
    };

    function DeleteRow() {
        showDeleteRow('Price', 'deleteExtraPrice');
    };

</script>
