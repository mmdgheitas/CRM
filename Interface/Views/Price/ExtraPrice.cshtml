<script src="~/Content/themes/AccountingAdmin/assets/plugins/jqgrid/js/i18n/grid.locale-en.js"></script>
<script src="~/Content/themes/AccountingAdmin/assets/plugins/jquery-contextmenu/dist/jquery.ui.position.min.js"></script>
