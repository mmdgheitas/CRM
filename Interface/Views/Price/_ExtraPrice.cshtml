@model Infrastructure.Entity.GlassExtraPriceEnt
@{
    Layout = null;
}
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<link href="~/Content/themes/my/my-css.css" rel="stylesheet" />
<script src="~/Scripts/AdminScripts.js"></script>
<div class="modal-content">

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">
            @if (ViewBag.mode == "edit")
            {
                @Html.Raw("Edit Extra Price")
            }
            @if (ViewBag.mode == "add")
            {
                @Html.Raw("Add Extra Price")
            }
        </h4>

    </div>@using (Html.BeginForm("_ExtraPrice", "Price", FormMethod.Post, new { id = "ExtraForm" }))
    {
        <div class="modal-body">

            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })

            @if (ViewBag.mode == "edit")
            {
                <div class="alert alert-info">
                    <small>
                        @Html.LabelFor(model => model.modifiedInfo, htmlAttributes: new { @class = "control-label" })
                        @Html.DisplayFor(model => model.modifiedInfo)

                    </small>
                </div>
                @Html.HiddenFor(model => model.ID)
            
               
            }


            <fieldset>

                

                <div class="form-group ">
                    <div class="col-md-6">
                        @Html.LabelFor(m => m.Title, htmlAttributes: new { @class = "control-label " })
                        <span class="star-red">*</span>
                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="col-md-6">
                        @Html.LabelFor(m => m.Price, htmlAttributes: new { @class = "control-label " })

                        @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>


          

            </fieldset>
        </div>
        <div class="modal-footer">
            <input type="submit" value="Save" class="btn btn-success" id="saveBtn" data-loading-text="Saving ..." />
            <input type="button" value="Cancel" class="btn btn-default pull-left " data-dismiss="modal" />
        </div>
    }
</div>
<script type="text/javascript">
  
    $(function () {
        AddEditForm('ExtraForm', 'Price', '_ExtraPrice', '@ViewBag.mode');
        $('[data-toggle="tooltip"]').tooltip();
    });

</script>